<main id="main" class="main">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Answer Key of {{junior.day}}</h5>
                        <hr>

                        <!-- General Form Elements -->
                        <form action="/admin/edit-junior-key/{{junior._id}}" enctype="multipart/form-data"
                            method="POST">
                            <input type="hidden" name="date" id="datetime">


                            <label for="key" class="mb-2">Answer Key</label>
                            <select class="form-select" name="key" aria-label="Default select example" required>
                                <option value="enable" {{#if (eq2 junior.key "enable" )}}selected{{/if}}>Enable</option>
                                <option value="disable" {{#if (eq2 junior.key "disable" )}}selected{{/if}}>Disable
                                </option>
                            </select>

                            <br>
                            <button type="submit" class="btn btn-primary w-25">Submit</button>
                            <a href="/admin/all-keys" class="btn btn-dark w-25">Cancel</a>

                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


