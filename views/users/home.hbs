<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    {{!-- <a href="/admin/remove-all-users"
                        onclick="return confirm('Are You Sure to Remove All Users ?')"
                        class="btn btn-danger mb-1 mt-3">Remove All Users</a> --}}
                    <!-- Table with stripped rows -->
                    <table class="table datatable table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>SELECT A DAY</th>

                            </tr>
                        </thead>
                        <tbody>
                            <h1>Quiz </h1>
                            {{#each days}}
                            {{#eq this.status "display"}}
                            <tr>
                                <td><a href="/qd-view/{{this.hello}}" class="btn btn-success"> {{this.day}}</a></td>

                            </tr>
                            {{/eq}}
                            {{#eq this.status "disabled"}}
                            <tr>
                                <td><a href="/qd-view/{{this.hello}}" class="btn disabled"> {{this.day}}</a></td>

                            </tr>
                            {{/eq}}
                            {{/each}}


                        </tbody>
                    </table>
                   
                </div>
            </div>

        </div>
    </div>
</section>